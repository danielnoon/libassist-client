{
  "name": "libassist",
  "version": "1.0.0",
  "description": "Library Assistant",
  "productName": "LibAssist",
  "main": "dist/app.js",
  "ladoc": "docs",
  "scripts": {
    "start": "electron .",
    "test": "echo I need to write tests.",
    "serve": "run-p -r serve:*",
    "serve:ng": "ng serve",
    "serve:electron": "gulp && wait-on http-get://localhost:4200/ && electron . --serve",
    "postinstall": "electron-builder install-app-deps",
    "build-test": "build --dir",
    "build-linux": "run-s build:* pack-linux",
    "build-mac": "run-s build:* pack-mac",
    "build:electron": "gulp",
    "build:ng": "ng build --prod",
    "pack-linux": "build -wl",
    "pack-windows": "build -w",
    "pack-mac": "build -m"
  },
  "author": "Daniel Noon <delpinothedragon1@hotmail.com> (https://supermegadex.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supermegadex/libassist-client.git"
  },
  "dependencies": {
    "express": "^4.16.4",
    "ncp": "^2.0.0",
    "tempy": "^0.2.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.3",
    "@angular-devkit/core": "^7.1.3",
    "@angular/animations": ">=7.0.0",
    "@angular/cdk": "~7.1.1",
    "@angular/cli": "^7.1.4",
    "@angular/common": "^7.1.3",
    "@angular/compiler": "^7.2.6",
    "@angular/compiler-cli": "^7.2.6",
    "@angular/core": "^7.1.3",
    "@angular/forms": "^7.1.3",
    "@angular/language-service": "~7.1.0",
    "@angular/material": "~7.1.1",
    "@angular/platform-browser": "^7.1.3",
    "@angular/platform-browser-dynamic": "^7.1.3",
    "@types/express": "^4.16.0",
    "@types/ncp": "^2.0.1",
    "@types/node": "^10.12.12",
    "@types/tempy": "^0.1.0",
    "@types/vinyl": "^2.0.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "commander": "^2.19.0",
    "core-js": "^2.6.0",
    "electron": "^4.0.1",
    "electron-builder": "^20.38.4",
    "electron-reload": "^1.4.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0",
    "hammerjs": "^2.0.8",
    "husky": "^1.3.1",
    "lodash-es": "^4.17.11",
    "material-design-icons": "^3.0.1",
    "ngx-ace-wrapper": "^7.3.0",
    "ngx-electron": "^1.0.4",
    "ngx-markdown": "^7.1.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "tslint": "^5.13.0",
    "typescript": "3.1.6",
    "wait-on": "^3.2.0",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "xterm": "^3.11.0",
    "zone.js": "^0.8.26"
  },
  "build": {
    "appId": "com.supermegadex.libassist",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "assets/logo.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/logo.png"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      },
      "icon": "assets/logo.ico"
    },
    "directories": {
      "output": "artifacts"
    },
    "publish": [
      "github"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
